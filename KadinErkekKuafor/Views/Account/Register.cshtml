@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>Yeni Hesap Oluştur</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" asp-action="Register">
    <div class="form-group">
        <label for="email">E-posta</label>
        <input type="email" class="form-control" id="email" name="email" required placeholder="E-posta adresinizi girin" />
    </div>
    <div class="form-group">
        <label for="password">Parola</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="Parolanızı girin" />
    </div>
    <div class="form-group">
        <label for="confirmPassword">Parolayı Doğrula</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Parolayı doğrulayın" />
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Kaydol</button>
    </div>
</form>

<p class="mt-3">Zaten hesabınız var mı? <a href="/Account/Login">Oturum Aç</a></p>
