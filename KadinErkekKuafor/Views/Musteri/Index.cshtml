@model IEnumerable<KuaforYonetimSistemi.Models.Musteri>

<h1>Müşteri Listesi</h1>

<p>
    <a href="/Musteri/Create" class="btn btn-primary">Yeni Müşteri Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <td>@musteri.MusteriID</td>
                <td>@musteri.Ad</td>
                <td>@musteri.Soyad</td>
                <td>@musteri.Email</td>
                <td>@musteri.Telefon</td>
                <td>
                    <a href="/Musteri/Edit/@musteri.MusteriID" class="btn btn-warning">Düzenle</a>
                    <a href="/Musteri/Details/@musteri.MusteriID" class="btn btn-info">Detay</a>
                    <a href="/Musteri/Delete/@musteri.MusteriID" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
